= render "layouts/single-header"
%main.log-main
  .login-panel
    .login-no-account
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録",signup_users_path,class: "new"
    .login-main
      .login-main__upper
        .login-main__upper__Facebook-btn
          = link_to user_facebook_omniauth_authorize_path,class: "facebook" do
            = fa_icon "facebook-square"
            Facebookでログイン
        .login-main__upper__Google-btn
          = link_to user_google_oauth2_omniauth_authorize_path,class: "google" do
            = fa_icon "google"
            Googleでログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-main__lower
          .login-main__lower__email
            = f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "メールアドレス", class: "login-input-text"
          .login-main__lower__password
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "login-input-text"
          .login-main__lower__login
            =image_tag "https://kanntann.com/wp-content/uploads/2018/02/9b564b94bbf2f711e17c70ae1624a1f2-4.png"
            = f.submit "ログイン", class: "login-submit btn-default btn-red"
          .login-main__lower__reset-start
            = link_to "パスワードをお忘れの方",'#',class: "pass"
= render "layouts/single-footer"
