        %span.form-arbitrary 任意
        -# = text_field :content, class: 'chat__form__message', placeholder: 'type a message'
        -# %input#page_name{:name => "page[name]", :size => "30", :type => "text"}/
        %input.input-default{:name => "zip_code", :placeholder => "", :type => "text"}/

      .main-content-form-group
        %label 市区町村
        %span.form-arbitrary 任意
        -# = text_field :content, class: 'chat__form__message', placeholder: 'type a message'
        -# %input#page_name{:name => "page[name]", :size => "30", :type => "text"}/
        %input.input-default{:name => "zip_code", :placeholder => "例) 横浜市緑区", :type => "text"}/

      .main-content-form-group
        %label 番地
        %span.form-arbitrary 任意
        -# = text_field :content, class: 'chat__form__message', placeholder: 'type a message'
        -# %input#page_name{:name => "page[name]", :size => "30", :type => "text"}/
        %input.input-default{:name => "zip_code", :placeholder => "例) 青山1−1−1", :type => "text"}/

      .main-content-form-group
        %label 建物
        %span.form-arbitrary 任意
        -# = text_field :content, class: 'chat__form__message', placeholder: 'type a message'
        -# %input#page_name{:name => "page[name]", :size => "30", :type => "text"}/
        %input.input-default{:name => "zip_code", :placeholder => "例) 柳ビル103", :type => "text"}/

      .main-content-form-group
        %button.btn-default.btn-red{:type => "submit"} 登録する

      .main-content-form-group
        %p.text-right
          %a{:href => "#"} 本人情報の登録について
          %i.fas.fa-angle-right
