        .form-group
          %label 番地
          -# = f.label :banchi, "番地"
          %span.form-require 必須
          %input.input-default{type: "text", placeholder: "例)羊ケ丘1"}
          -# = f.text_field :banchi, placeholder: "例)羊ケ丘1", class: "input-default"
        .form-group
          %label 建物名
          -# = f.label :tatemono, "番地"
          %span.form-require 任意
          %input.input-default{type: "text", placeholder: "例)フォンティス"}
