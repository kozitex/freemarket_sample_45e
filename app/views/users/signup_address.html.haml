          %input.input-default{type: "text", placeholder: "例)ゲン"}
          -# = f.text_field :kana_mei, placeholder: "例)ゲン", class: "input-default"
        .form-group
          %label 郵便番号
          -# = f.label :zip-code, "郵便番号"
          %span.form-require 必須
          %input.input-default{type: "text", placeholder: "例)123-4567"}
