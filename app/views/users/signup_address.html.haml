%header.signup-header-line
  %h1
    = image_tag '////www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?128691313', alt: 'mercari'
  .signup-header-line__progress
    .signup-header-line__progress__item
      .signup-header-line__progress__title.signup-header-line__progress--done 会員情報
      .signup-header-line__progress__dot.signup-header-line__progress--done
        = fa_icon "circle"
        .signup-header-line__progress__line.signup-header-line__progress--done
    .signup-header-line__progress__item
      .signup-header-line__progress__title.signup-header-line__progress--done 電話番号
      .signup-header-line__progress__dot.signup-header-line__progress--done
        = fa_icon "circle"
        .signup-header-line__progress__line.signup-header-line__progress--done
    .signup-header-line__progress__item
      .signup-header-line__progress__title.signup-header-line__progress--done 住所入力
      .signup-header-line__progress__dot.signup-header-line__progress--done
        = fa_icon "circle"
        .signup-header-line__progress__line
    .signup-header-line__progress__item
      .signup-header-line__progress__title 支払い方法
      .signup-header-line__progress__dot
        = fa_icon "circle"
        .signup-header-line__progress__line
    .signup-header-line__progress__item
      .signup-header-line__progress__title 完了
      .signup-header-line__progress__dot
        = fa_icon "circle"
%main.signup-main-regist
  %section.l-signup-container
    %h4.l-signup-head 発送元・お届け先住所入力
    -# = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    %form.l-signup-inner
      .l-signup-content
        .form-group
          %label 姓 (全角)
          -# = f.label :sei, "姓 (全角)"
          %span.form-require 必須
          %input.input-default{type: "text", placeholder: "例)田中"}
          -# = f.text_field :sei, placeholder: "例)田中", class: "input-default"
        .form-group
          %label 名 (全角)
          -# = f.label :mei, "名 (全角)"
          %span.form-require 必須
          %input.input-default{type: "text", placeholder: "例)源"}
          -# = f.text_field :mei, placeholder: "例)源", class: "input-default"
        .form-group
          %label 姓カナ (全角)
          -# = f.label :kana_sei, "姓カナ (全角)"
          %span.form-require 必須
          %input.input-default{type: "text", placeholder: "例)タナカ"}
          -# = f.text_field :kana_sei, placeholder: "例)タナカ", class: "input-default"
        .form-group
          %label 名カナ (全角)
          -# = f.label :kana_mei, "名カナ (全角)"
