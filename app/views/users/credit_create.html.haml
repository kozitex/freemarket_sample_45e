- breadcrumb :credit_create, @user
= render "layouts/header-logined"
= render "layouts/breadcrumb"

%main.credit-create-main.clearfix
  .my-page-credit__body
    .my-page-credit__body__content
      .my-page-credit__body__main
        %h2.my-page-credit__body__main__head 支払い方法
        .my-page-credit__body__main__inner
          .my-page-credit__body__main__inner__body
            .my-page-credit__body__main__inner__body__field
              カード番号
              %span.form-require 必須
              %input{ placeholder: "半角数字のみ", class: "input-default", maxlength: 19 }
              %ul.signup-card-list
                %li
                  =image_tag('credit/visa.svg', class: "signup-card-list__visa")
                %li
                  =image_tag('credit/master-card.svg', class: "signup-card-list__master")
                %li
                  =image_tag('credit/saison-card.svg', class: "signup-card-list__saison")
                %li
                  =image_tag('credit/jcb.svg', class: "signup-card-list__jcb")
                %li
                  =image_tag('credit/american_express.svg', class: "signup-card-list__american")
                %li
                  =image_tag('credit/dinersclub.svg', class: "signup-card-list__diners")
                %li
                  =image_tag('credit/discover.svg', class: "signup-card-list__discover")
            .my-page-credit__body__main__inner__body__field.signup-form-expire
              有効期限
              %span.form-require 必須
              .signup-form-expire__wrap
                %select
                  %option{ value: 1 } 1
                  %option{ value: 2 } 2
                  %option{ value: 3 } 3
                  %option{ value: 4 } 4
                  %option{ value: 5 } 5
                  %option{ value: 6 } 6
                  %option{ value: 7 } 7
                  %option{ value: 8 } 8
                  %option{ value: 9 } 9
                  %option{ value: 10 } 10
                  %option{ value: 11 } 11
                  %option{ value: 12 } 12
                %span 月
              .signup-form-expire__wrap
                %select
                  %option{ value: 19 } 19
                  %option{ value: 20 } 20
                  %option{ value: 21 } 21
                  %option{ value: 22 } 22
                  %option{ value: 23 } 23
                  %option{ value: 24 } 24
                  %option{ value: 25 } 25
                  %option{ value: 26 } 26
                  %option{ value: 27 } 27
                  %option{ value: 28 } 28
                  %option{ value: 29 } 29
                %span 年
            .my-page-credit__body__main__inner__body__field
              セキュリティコード
              %span.form-require 必須
              %input{ placeholder: "カード背面4桁もしくは3桁の番号", class: "input-default" }
              %p.info カード裏面の番号とは？
              %button{ type: "button", class: "btn-default btn-red" }
                次へ進む

  = render "sidebar"
= render "layouts/footer"
