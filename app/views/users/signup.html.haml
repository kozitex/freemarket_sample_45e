= render "layouts/single-header"
%main.signup-main
  .signup-panel
    .signup-title
      %p.l-signup-head 新規会員登録
    .signup-main
      .signup-main__Mail-btn
        = link_to "メールアドレスで登録",new_user_registration_path ,class: "mail"
      .signup-main__Facebook-btn
        = link_to '#',class: "facebook" do
          = fa_icon "facebook-square"
          Facebookで登録
      .signup-main__Google-btn
        = link_to '#',class: "google" do
          = fa_icon "google"
          Googleで登録
= render "layouts/single-footer"
